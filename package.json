{
  "name": "hod",
  "version": "1.0.0",
  "type": "module",
  "description": "HOD â€” Markdown-based task manager with subtasks and dependencies",
  "main": "./dist/cli/index.js",
  "bin": {
    "hod": "./dist/cli/index.cjs"
  },
  "exports": {
    ".": {
      "import": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:prod": "node esbuild.config.mjs --production",
    "build:watch": "node esbuild.config.mjs --watch",
    "dev": "npm run build:watch",
    "dev:link": "npm run build && npm link",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix && npm run format",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "prepublishOnly": "npm run build:prod",
    "prepack": "npm run build:prod"
  },
  "keywords": [
    "task-manager",
    "markdown",
    "cli",
    "productivity",
    "todo",
    "task-tracker",
    "subtasks",
    "dependencies"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/ui": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "memfs": "^4.51.1",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  }
}
