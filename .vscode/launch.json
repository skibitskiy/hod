{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/cli/index.cjs",
      "preLaunchTask": "npm: build",
      "args": ["${command:args}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI (add task)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/cli/index.cjs",
      "preLaunchTask": "npm: build",
      "args": ["add", "--title", "Test task"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
